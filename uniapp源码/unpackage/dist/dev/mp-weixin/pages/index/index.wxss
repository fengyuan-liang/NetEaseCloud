.index-search {
	display: flex;
	/* 上下居中 */
	align-items: center;
	height: 70rpx;
	margin: 70rpx 30rpx 30rpx 30rpx;
	background: #f7f7f7;
	border-radius: 50rpx;
}
.index-search text {
	font-size: 26rpx;
	margin-right: 26rpx;
	margin-left: 28rpx;
}
.index-search input {
	font-size: 28rpx;
	flex: 1;
}
